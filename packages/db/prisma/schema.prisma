model Balance{
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  amount Int 
  locked Int
  user   User @relation(fields: [userId] ,references: [id])
}

enum AuthType {
  Google 
  Facebook
}


enum onRampStatus {
  Success 
  Failure
  Processing
}
